{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "ES2018",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/*.ts"]
}
