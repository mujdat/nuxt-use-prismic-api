{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "es5",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules"],
  "include": ["./src/*.ts"]
}
