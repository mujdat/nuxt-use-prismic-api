{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "pretty": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "src",
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/*.ts"]
}
